<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/activity_horizontal_margin"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="vertical">

    <TextView
        android:id="@+id/site_settings_label"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingEnd="@dimen/preference_item_padding_side"
        android:paddingStart="@dimen/preference_item_padding_side"
        android:text="@string/site_settings_label"
        android:textAllCaps="false"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_discourse_site_tips"
            android:textSize="24sp"
            android:visibility="gone"/>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/white"
            android:drawSelectorOnTop="true"/>
    </FrameLayout>

</LinearLayout>